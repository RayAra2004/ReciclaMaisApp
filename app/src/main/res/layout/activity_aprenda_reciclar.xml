<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.AprendaReciclarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_qual_item_deseja_reciclar_aprenda_reciclar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUAL DOS ITENS ABAIXO DESEJA APRENDER A RECICLAR?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_vidro_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="VIDROS" />

            <Button
                android:id="@+id/btn_metal_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="METAIS" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_plastico_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="PLÁSTICO" />

            <Button
                android:id="@+id/btn_papel_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="PAPEL" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_madeira_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="MADEIRAS" />

            <Button
                android:id="@+id/btn_lixo_organico_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="LIXO ORGÂNIGO" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lixo_eletronico_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="LIXO ELETRÔNICO" />

            <Button
                android:id="@+id/btn_lixo_hospitalar_aprenda_reciclar"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/background_button"
                android:text="LIXO HOSPITALAR" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>