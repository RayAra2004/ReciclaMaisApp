<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frameLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/painel_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imv_foto_ponto_adicionar_ponto"
                            android:layout_width="@dimen/thumb_width"
                            android:layout_height="@dimen/thumb_height"
                            android:layout_marginStart="108dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_avalie_o_ponto_descricao_ponto"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/tv_avalie_o_ponto_descricao_ponto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto"
                            android:text="Adicione a imagem do ponto"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Nome"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btn_adicionar_foto_ponto_adicionar_ponto" />

                        <Button
                            android:id="@+id/btn_adicionar_foto_ponto_adicionar_ponto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="76dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/text_color"
                            android:text="ADICIONE A IMAGEM"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imv_foto_ponto_adicionar_ponto" />

                        <EditText
                            android:id="@+id/editText_nome_adicionar_ponto"
                            android:layout_width="285dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:hint="Digite seu nome"
                            android:inputType="textPersonName"
                            android:textColorHint="#99FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView33" />

                        <EditText
                            android:id="@+id/editText_CEP_adicionar_ponto"
                            android:layout_width="285dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:hint="Digite seu CEP"
                            android:inputType="textPersonName"
                            android:textColorHint="#99FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView34" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="CEP"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_nome_adicionar_ponto" />

                        <EditText
                            android:id="@+id/editText_tpLogradouro_adicionar_ponto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Digite seu tipo de logradouro"
                            android:inputType="text"
                            android:text="Name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView35" />

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Tipo_logradouro"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_CEP_adicionar_ponto" />

                        <TextView
                            android:id="@+id/tv_adicione_um_comentario_descricao_ponto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:text="Logradouro"
                            android:textColor="#FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_tpLogradouro_adicionar_ponto" />

                        <EditText
                            android:id="@+id/editText_logradouro_adicionar_ponto"
                            android:layout_width="285dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Digite o logradouro"
                            android:textColor="#99FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_adicione_um_comentario_descricao_ponto" />

                        <EditText
                            android:id="@+id/editText_numero_adicionar_ponto"
                            android:layout_width="285dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:inputType="number"
                            android:textColor="#99FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView37"
                            android:autofillHints="Digite o logradouro" />

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Número"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_logradouro_adicionar_ponto" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Estado"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_numero_adicionar_ponto" />

                        <EditText
                            android:id="@+id/editText_estado_adicionar_ponto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView39" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:text="Cidade"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:layout_editor_absoluteY="683dp" />

                        <EditText
                            android:id="@+id/editText_cidade_adicionar_ponto"
                            android:layout_width="285dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Digite a cidade"
                            android:textColor="#99FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView40" />

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Bairro"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_cidade_adicionar_ponto" />

                        <EditText
                            android:id="@+id/editText_bairro_adicionar_ponto"
                            android:layout_width="285dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Digite o bairro"
                            android:textColor="#99FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView41" />

                        <HorizontalScrollView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_vidro_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Vidro" />

                                <Button
                                    android:id="@+id/btn_metal_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Metal" />

                                <Button
                                    android:id="@+id/btn_plastico_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Plástico" />

                                <Button
                                    android:id="@+id/btn_papel_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Papel" />

                                <Button
                                    android:id="@+id/btn_hospitalar_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Hospitalar" />

                                <Button
                                    android:id="@+id/btn_eletronicos_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Eletrônicos" />

                                <Button
                                    android:id="@+id/btn_madeira_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Madeira" />

                                <Button
                                    android:id="@+id/btn_organico_adicionar_ponto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="#514869"
                                    android:text="Orgânico" />

                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Materiais que o ponto recicla"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editText_bairro_adicionar_ponto" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <Button
                    android:id="@+id/btn_adicionar_ponto_de_coleta_adicionar_ponto"
                    android:layout_width="286dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/text_color"
                    android:text="ADICIONAR PONTO DE COLETA"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>