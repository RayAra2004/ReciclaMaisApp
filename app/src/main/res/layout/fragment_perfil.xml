<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    >

    <ImageView
        android:id="@+id/imv_foto_usuario_perfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nome_usuario_perfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_foto_usuario_perfil" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome_usuario_perfil">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_mudar_dados_perfil"
                android:layout_width="167dp"
                android:layout_height="122dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/background_button"
                android:text="mudar dados"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                app:icon="@android:drawable/ic_popup_sync"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="60dp"
                app:iconTint="@color/text_color" />

            <Button
                android:id="@+id/btn_aprenda_a_reciclar_perfil"
                android:layout_width="167dp"
                android:layout_height="122dp"
                android:layout_marginStart="32dp"
                android:backgroundTint="@color/background_button"
                android:text=" aprenda a reciclar"
                android:textColor="@color/text_color"
                app:icon="@drawable/baseline_recycling_24"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="60dp"
                app:iconTint="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ajuda_perfil"
                android:layout_width="167dp"
                android:layout_height="122dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/background_button"
                android:text="AJUDA"
                android:textColor="@color/text_color"
                app:icon="@android:drawable/ic_menu_help"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="60dp"
                app:iconTint="@color/text_color" />

            <Button
                android:id="@+id/btn_materiais_postados_perfil"
                android:layout_width="167dp"
                android:layout_height="122dp"
                android:layout_marginStart="32dp"
                android:backgroundTint="@color/background_button"
                android:text="Materiais Postados"
                android:textColor="@color/text_color"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="60dp"
                app:iconTint="@color/text_color" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>