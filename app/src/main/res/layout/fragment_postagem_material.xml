<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/painel_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Adicione a imagem do material"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="158dp"
                android:layout_height="118dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@android:drawable/ic_menu_crop" />

            <Button
                android:id="@+id/btn_finalizar_esqueceu_senha"
                android:layout_width="245dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/text_color"
                android:text="ADICIONE A IMAGEM"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Digite seu primeiro nome"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_telefone_cadastro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Digite seu nome"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textColorHint="#99FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Telefone de contato"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_email_cadastro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Digite seu telefone"
                android:inputType="textEmailAddress"
                android:padding="3dp"
                android:textColorHint="#99FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Quantidade em KG"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_senha_cadastro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Digite aqui"
                android:inputType="textPassword"
                android:padding="3dp"
                android:textColorHint="#99FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Descrição do material"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_confirme_sua_senha_cadastro"
                android:layout_width="293dp"
                android:layout_height="136dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:gravity="top"
                android:hint="Adicione a descrição"
                android:inputType="textPassword"
                android:padding="3dp"
                android:textColorHint="#99FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_solicitar_coleta_postagem_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/text_color"
                android:text="SOLICITAR COLETA"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>